<odoo>
    <record id="view_contribution_tree" model="ir.ui.view">
        <field name="name">contribution.tree</field>
        <field name="model">cec_base.contribution</field>
        <field name="arch" type="xml">
            <tree string="Contributions">
                <field name="name"/>
                <field name="date"/>
                <field name="contributor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_contribution_form" model="ir.ui.view">
        <field name="name">contribution.form</field>
        <field name="model">cec_base.contribution</field>
        <field name="arch" type="xml">
            <form string="Contribution">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="contributor_id"/>
                        <field name="scan"/>
                        <field name="page_ids" wiget="many2many_tags"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_contribution" model="ir.actions.act_window">
        <field name="name">Contributions</field>
        <field name="res_model">cec_base.contribution</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_contribution" name="Contributions" parent="menu_book_root" action="action_contribution" sequence="12"/>
</odoo>