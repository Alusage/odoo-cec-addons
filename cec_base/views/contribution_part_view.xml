<odoo>
    <record id="view_contribution_part_tree" model="ir.ui.view">
        <field name="name">contribution.tree</field>
        <field name="model">cec_base.contribution.part</field>
        <field name="arch" type="xml">
            <tree string="Contributions">
                <field name="name"/>
                <field name="date"/>
                <field name="contributor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_contribution_part_form" model="ir.ui.view">
        <field name="name">contribution.form</field>
        <field name="model">cec_base.contribution.part</field>
        <field name="arch" type="xml">
            <form string="Element de Contribution">
            <sheet>
                <group>
                    <field name="name" force_save="1" readonly="1"/>
                    <group>
                        <field name="book_id"/>
                        <field name="page_id"/>
                        <field name="contribution_id"/>
                    </group>
                    <group>
                        <field name="assigned_user_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                <field name="raw_content"/>
                </group>
                <notebook>
                    <page string="Analyse linguistique">
                        <field name="content"/>
                    </page>
                </notebook>
                
            </sheet>
             <!-- Attachment preview -->
                    <div class="o_attachment_preview"/>
                
            <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'always'}"/>
                    </div>
            </form>
        </field>
    </record>

    <record id="action_contribution_part" model="ir.actions.act_window">
        <field name="name">Contributions</field>
        <field name="res_model">cec_base.contribution.part</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_contribution_part" name="Elements de Contributions" parent="menu_book_root" action="action_contribution_part" sequence="14"/>
</odoo>